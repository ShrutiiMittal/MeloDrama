<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeloDrama" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorNight</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorNight</item>
        <item name="colorOnPrimary">@color/primaryDarkColorNight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryTextColorNIght</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColorNight</item>
        <item name="colorOnSecondary">@color/secondaryDarkColorNight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextH1">
        <item name="fontFamily">@font/nexa_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/primaryTextColorNight</item>
    </style>

    <style name="TextSH1">
        <item name="fontFamily">@font/nexa_light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primaryTextColorNight</item>
    </style>

    <style name="customRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="MyButtonText" parent="@android:style/Widget.Button">
        <item name="fontFamily">@font/nexa_bold</item>
        <item name="android:textColor">@color/primaryTextColorNight</item>
    </style>

</resources>